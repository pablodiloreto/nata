@model IdentityUser


@{
    ViewData["Title"] = "Delete a User";
    Layout = "_LayoutUsers";
}

<h3>Users | Delete <strong>@Html.DisplayFor(model => model.UserName)</strong>?</h3>
<p>Please, confirm or cancel this action.</p>

<p><a asp-action="Index">Back to List</a></p>

<br />
<hr />

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Email)
        </dt>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
