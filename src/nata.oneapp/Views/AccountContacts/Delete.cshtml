@model nata.Models.AccountContacts

@{
    ViewData["Title"] = "Delete a Relation";
    Layout = "_LayoutAccounts";
}

<h3>Are you sure you want to delete the account named <strong>@Html.DisplayFor(model => model.Account.Name)</strong>?</h3>
<p>Please, confirm or cancel this action.</p>

<div>
    <h4>AccountContacts</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AccountId" />
        <input type="hidden" asp-for="ContactId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
