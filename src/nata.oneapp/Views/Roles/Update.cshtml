@model RoleEdit

@{
    ViewData["Title"] = "Role Details";
    Layout = "_LayoutConfigurations";
}

<h3>Role details for <strong>@Html.DisplayFor(model => model.Role.Name)</strong></h3>
<p>Please, check the users that do you want add to this role.</p>
<hr />

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h4>Users in the Role</h4>
    <p>Check the users that do you want to remove from this role.</p>

    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>

    <hr />


    <h4>Users NOT in the Role</h4>
    <p>Check the users that do you want to add to this role.</p>

    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index">Back to List</a>
