@model RoleEdit


@{
    ViewData["Title"] = "Delete a Role";
    Layout = "_LayoutUsers";
}

<h3>Are you sure you want to delete the Role named <strong>@Html.DisplayFor(model => model.Role.Name)</strong>?</h3>
<p>Please, confirm or cancel this action.</p>
<a asp-action="Index">Back to List</a>

<br />
<hr />

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Role.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
